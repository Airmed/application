<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <WebView
        android:id="@+id/privacy_policy_webView"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />



    <TextView
        android:id="@+id/privacy_policy_ti_textView_header"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:padding="5dp"
        android:text="@string/ti_privacy_policy_text_header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/privacy_policy_ti_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="@string/ti_privacy_policy_text"
        android:layout_below="@+id/privacy_policy_ti_textView_header"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/privacy_policy_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/color_connection_text_sc_holo_grey"

        android:clickable="true"
        android:text="@string/privacy_policy_link"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/privacy_policy_ti_textView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
